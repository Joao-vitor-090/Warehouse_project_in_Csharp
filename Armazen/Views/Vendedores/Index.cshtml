@model IEnumerable<Armazen.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedores";
}

<h1> @ViewData["Ttile"]</h1>

<table class="table table-striped table-hover">

    <thead>
        <tr >
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Aniversario)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.SalarioBase)
            </th>
        </tr>
        <th>
        </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Aniversario)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
        
        }

    </tbody>
</table>
 
