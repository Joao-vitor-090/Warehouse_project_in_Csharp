@model Armazen.Models.VendedorFormViewModel;

@{
    ViewData["Title"] = "Criar";
}
<h1>@ViewData["Title"]</h1>
<h3>Vendedores</h3>
<hr />
<div class="row"> 
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Vendedor.Name" class="custom-control-label"></label>
                <input asp-for="Vendedor.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="custom-control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Aniversario" class="custom-control-label"></label>
                <input asp-for="Vendedor.Aniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="custom-control-label"></label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepositoId" class="custom-control-label"></label>
                <select asp-for="Vendedor.DepositoId" asp-items="@(new SelectList(Model.Depositos,"Id","Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type ="submit" value="Criar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

