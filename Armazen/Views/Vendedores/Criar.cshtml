@model Armazen.Models.Vendedor

@{
    ViewData["Title"] = "Criar";
}
<h1>@ViewData["Title"]</h1>
<h3>Vendedores</h3>
<hr />
<div class="row"> 
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="custom-control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Aniversario" class="custom-control-label"></label>
                <input asp-for="Aniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="custom-control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type ="submit" value="Criar" class="btn btn-danger"
            </div>
        </form>
    </div>
</div>

